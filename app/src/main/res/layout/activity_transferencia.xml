<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Transferencia">

    <TextView
        android:id="@+id/Mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:background="@drawable/shape_pill_background_title"
        android:gravity="center"
        android:text="Transferencias"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_pill_background_form"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cargando"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/Euros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="â‚¬"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCifra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Cifra a enviar:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/etCifra"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_pill_background_field"
                android:hint="cifra a enviar"
                android:inputType="numberDecimal|numberSigned"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDestinatario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:hint="escriba el correo o numero de tarjeta del destinatario, tras descontar las donaciones de la cifra,esta se le enviara al destinatario"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/etDestinatario"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_pill_background_field"
            android:hint="Destinatario"
            android:inputType="text"
            android:maxLines="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btEnviarANumero"
                android:layout_width="180dp"
                android:layout_height="81dp"
                android:layout_margin="10dp"
                android:backgroundTint="#8ab97f"
                android:text="enviar a Numero de tarjeta"
                app:strokeColor="#36542f"
                app:strokeWidth="4dp" />

            <Button
                android:id="@+id/btEnviarACorreo"
                android:layout_width="180dp"
                android:layout_height="81dp"
                android:layout_margin="10dp"
                android:backgroundTint="#8ab97f"
                android:text="enviar a Correo"
                app:strokeColor="#36542f"
                app:strokeWidth="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btVolver"
            android:layout_width="170dp"
            android:layout_height="81dp"
            android:backgroundTint="#8ab97f"
            android:text="volver"
            app:strokeColor="#36542f"
            app:strokeWidth="4dp" />
    </LinearLayout>

</LinearLayout>