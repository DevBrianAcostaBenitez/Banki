<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Suscripciones">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_pill_background_title"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Suscripciones"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shape_pill_background_form"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cargando"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/Euros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="â‚¬"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Aqui puedes configurar tus suscripciones"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_pill_background_form"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRevistas"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Revistas : 1 euro "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Revistas"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="cargando"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btRevistas"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8ab97f"
                android:text="Cambiar estado"
                app:strokeColor="#36542f"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_pill_background_form"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAnime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Anime: 2 euros"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Anime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="cargando"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btAnime"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8ab97f"
                android:text="Cambiar estado"
                android:textSize="15dp"
                app:strokeColor="#36542f"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_pill_background_form"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPeliculas"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Peliculas: 3 euros "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Peliculas"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="cargando"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btPeliculas"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8ab97f"
                android:text="Cambiar estado"
                app:strokeColor="#36542f"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btcobrar"
                android:layout_width="180dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:backgroundTint="#8ab97f"
                android:text="simular cobros"
                app:strokeColor="#36542f"
                app:strokeWidth="4dp" />

            <Button
                android:id="@+id/btpararsub"
                android:layout_width="180dp"
                android:layout_height="91dp"
                android:layout_margin="10dp"
                android:backgroundTint="#8ab97f"
                android:text="parar simulacion"
                app:strokeColor="#36542f"
                app:strokeWidth="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btvolver"
            android:layout_width="180dp"
            android:layout_height="91dp"
            android:backgroundTint="#8ab97f"
            android:text="Volver"
            app:strokeColor="#36542f"
            app:strokeWidth="4dp" />
    </LinearLayout>
</LinearLayout>